                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeColor="#3D32BF"
                app:strokeWidth="2dp">

                <TextView
                    android:layout_width="wrap_content"
